</head>

<body>

<div id="container">

    <!-- header -->
    <object id="header" name="admin-header" target= ype="text/html" data="../header.html"></object>

    <main>
        <!-- menu -->
        <object id="main-menu-box" name="main-menu-box" type="text/html" data="menu.html"></object>

        <!-- content -->
        <div id="main-content">

            <div id="main-content-header">
                <h1>Display mentor data</h1>
            </div>

                <div class="pick-list">
                <form method="POST">
                 <ol>
                    {%for mentor in MentorsNames%}
                        <li>
                            <input type="radio" name="mentorName" value="{{mentor}}" checked> {{mentor}}
                         </li>
                    {%endfor%}
                    </ol>
                    <input type="submit" value="display mentor details">
                 </form>
                </div>
                <div id="main-inner-container">
                    {{MentorInfo}}
                </div>

            </div>

    </main>

    <!-- footer -->
    <object id="footer" name="footer" type="text/html" data="../footer.html"></object>

</div>

</body>
</html>
