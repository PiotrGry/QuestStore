<!DOCTYPE HTML>
<html lang=en-us>
<head>
    <meta charset="utf-8"/>
    <title>Quest Store </title>
    <meta name="description" content="Quest Store System website."/>
    <meta name="keywords" content="it students, CodeCool"/>
    <link rel="stylesheet" href="/static/style.css" type="text/css"/>
    <link rel="stylesheet" href="/static/css/fontello.css" type="text/css"/>
    <script type="text/javascript" src="../js/javascript.js"></script>

</head>

<body>

<div id="container">

    <!-- header -->
    <object id="header" name="admin-header" target= ype="text/html" data="/static/header.html"></object>

    <main>
        <!-- menu -->
        <object id="main-menu-box" name="main-menu-box" type="text/html" data="/static/student/menu.html"></object>

        <!-- content -->
        <div id="main-content">
            <form method="post">
                <div id="main-inner-container">
                    <div class="artifacts">
                    <div class="pick-list">
                        <h1>Artifacts</h1>
                        <p>Your money: {{ money }}cc</p>
                        {% for artifact in artifacts %}
                            <input type="radio" name="artifact" value="{{ artifact }}"> {{ artifact }} <br/>
                        {% endfor %}
                    </div>
                    </div>
                </div>
                <div class="nested-container-submit">
                    <input type="submit" value="Buy" required><br/>
                </div>
                {%if method == POST%}
                    {{info}}
                {%endif%}
            </div>
            </form>
    </main>

    <!-- footer -->
    <object id="footer" name="footer" type="text/html" data="/static/footer.html"></object>

</div>

</body>
</html>
